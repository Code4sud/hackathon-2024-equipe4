{
    "manifest_version": 2,
    "name": "Alerte Risques Naturels",
    "version": "1.0",
    "description": "Plugin d'alerte pour les risques naturels dans les Alpes-Maritimes",
    "permissions": [
      "notifications",
      "https://georisques.gouv.fr/api/v1",
      "https://api.meteo-concept.com/api/forecast/nextHours",
      "https://cors-anywhere.herokuapp.com/http://www.vigicrues.gouv.fr/services/v1.1/TerEntVigiCru.json"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }